<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vr.n_artproject.FileCheckActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skull Model"
            android:id="@+id/skull_check_text"
            android:textColor="#ff000d"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maxilla Model"
            android:id="@+id/maxi_check_text"
            android:textColor="#ff000d"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mandible Model"
            android:id="@+id/mand_check_text"
            android:textColor="#ff000d"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maxilla OS Plane"
            android:id="@+id/osp1_check_text"
            android:textColor="#ff000d"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mandible OS Plane"
            android:id="@+id/osp2_check_text"
            android:textColor="#ff000d"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N-Art Project"
            android:id="@+id/project_check_text"
            android:textColor="#ff000d"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AR Marker Points"
            android:id="@+id/ar_check_text"
            android:textColor="#ff000d"
            android:textSize="18sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AR"
                android:id="@+id/aR_toggle"
                android:checked="false" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="VSCM"
                        android:id="@+id/stc_radButton"
                        android:checked="true"
                        android:textColor="#ff0000"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="ARToolkit calibration"
                        android:id="@+id/arc_radButton"
                        android:checked="false"
                        android:textColor="#ff0000"/>
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/VSCM_button" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/ARC_button" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Launch"
            android:id="@+id/launch_button"
            android:layout_weight="0.9" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/download_button"
            android:src="@android:drawable/stat_sys_download"
            android:layout_weight="0.1" />
    </LinearLayout>

</RelativeLayout>
